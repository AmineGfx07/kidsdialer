<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:src="@drawable/help_about" />

            <TextView
                android:id="@+id/lbAboutTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_transparent_20"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/about_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Aquamarine" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbApplicationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent_20"
                android:paddingLeft="4dp"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Bisque" />

            <TextView
                android:id="@+id/lbVersionVer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent_20"
                android:paddingLeft="4dp"
                android:text="@string/version_info"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Bisque" />

            <TextView
                android:id="@+id/lbVersionNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent_20"
                android:paddingLeft="4dp"
                android:text="@string/version_num"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/Bisque" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbAuthorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent_20"
                android:paddingLeft="4dp"
                android:text="@string/about_author_info"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Cornsilk" />

            <TextView
                android:id="@+id/lbAuthorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:background="@color/color_transparent_20"
                android:paddingLeft="20dp"
                android:text="@string/about_author_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Cornsilk" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/ivGPLV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent_40"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:src="@drawable/gpl_v3_logo_2_200x82" />

            <ImageView
                android:id="@+id/ivDonate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent_40"
                android:clickable="true"
                android:onClick="makeDonate"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:src="@drawable/donate_bt_3_3" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent_60"
            android:gravity="center_horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/about_info"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White"
            android:textColorLink="@color/White" />

        <TextView
            android:id="@+id/lbHintOfDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/hint_of_day"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Gold"
            android:textSize="36dp" />
    </LinearLayout>

</ScrollView><!-- From: file:/C:/home/working/develop/eclipse/notifiers/KidsDialer/KidsDialerApplic/res/layout/about.xml -->