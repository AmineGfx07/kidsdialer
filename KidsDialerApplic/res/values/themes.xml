<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="MainTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/scaled_background</item>
        <item name="android:editTextStyle">@style/AquaEditTextStyle</item>
        <item name="android:textAppearance">@style/AquaTextAppearance</item>
        <item name="android:checkboxStyle">@style/AquaCheckBoxStyle</item>
        
        <item name="android:spinnerStyle">@style/SpinnerTextView</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        
<!--         <item name="custButtonStyle">@android:style/Widget.Button</item>  -->
        
    </style>


    <!-- CustomThemeGreen -->
    
    <style name="CustomThemeGreen" parent="android:Theme">
        <item name="custButtonStyle">@style/CustomButtonStyle</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
<!--         
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
-->        
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>


</resources>